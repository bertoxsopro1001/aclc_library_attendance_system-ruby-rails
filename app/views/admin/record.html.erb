<div class="container mt-4">
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4">
    <!-- Collapsible menu button (for small screens) -->
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav mr-auto">
          <li class="nav-item">
          <a class="nav-link" href="http://127.0.0.1:3000/admin/attendance">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="http://127.0.0.1:3000/admin/add">Add Student</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="http://127.0.0.1:3000/allrecords">Attendance Records</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/logout">LOGOUT</a>
        </li>
       
      </ul>
      
      <form class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" type="search" name="studentSearch" placeholder="Search" aria-label="Search">
        <button class="btn btn-light my-2 my-sm-0" type="submit">Search</button>
      </form>
    </div>
  </nav>

  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th>USN</th>
        <th>Name</th>
        <th>Last Name</th>
        <th>Course</th>
        <th>Year</th>
        <th>Birth Day</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @students.each do |student| %>
        <tr>
          <td><%= student.usn %></td>
          <td><%= student.name %></td>
          <td><%= student.lastname %></td>
          <td><%= student.course %></td>
          <td><%= student.year %></td>
          <td><%= student.birth_day %></td>
          <td>
            <a href="/admin/view/<%= student.id %>" class="btn btn-primary">View</a>
            <a href="/students/edit/<%= student.id %>" class="btn btn-secondary">Edit</a>
            <a href="/delete/student/<%= student.id %>" class="btn btn-danger" data-confirm="Are you sure you want to delete this student?">Delete</a>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %> alert-dismissible fade show" role="alert">
    <%= value %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>
