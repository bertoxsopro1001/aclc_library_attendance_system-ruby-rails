<div class="container mt-4">
  <div class="card">
    <div class="card-header bg-primary text-white">
      <h5 class="font-weight-bold mb-0">Attendance Records for <%= @student.name %>:</h5>
    </div>
    <div class="card-body">
      <ul class="list-group">
        <% @attendances.each do |attendance| %>
          <li class="list-group-item">
            <div class="d-flex justify-content-between align-items-center">
              <span class="font-weight-bold">Time In:</span> <%= attendance.time_in %>
              <span class="font-weight-bold">Time Out:</span> <%= attendance.time_out %>
            </div>
            <% attendance.activities.each do |activity| %>
              <div class="ml-3"><span class="font-weight-bold text-info">- Purpose:</span> <%= activity.reason %></div>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
